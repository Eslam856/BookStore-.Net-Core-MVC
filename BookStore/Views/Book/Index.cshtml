@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<div>
    <a asp-action="Create" class="btn btn-primary ">Create New Book</a>
</div>
<br/>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.AuthorName)
            </th>

            <th>
                BookURL
            </th>

            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorName)
            </td>
            @if (item.ImageURL != null)
            {
                <td>
                    <img src="~/Uploads/@item.ImageURL" style="width:65px" class="img-thumbnail" />
                </td>
            }
            else
            {
                <td>
                    <img src="" style="width:65px" class="img-thumbnail" alt="Book IMage" />
                </td>
            }

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning " style="color:white"> Edit </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info ">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ">Delete</a>

                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id, @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ @class = "btn btn-danger" })*@
            </td>
        </tr>
}
    </tbody>
</table>
